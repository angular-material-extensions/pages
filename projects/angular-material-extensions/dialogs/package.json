{
  "name": "@angular-material-extensions/dialogs",
  "description": "Set of prebuilt extended angular material dialogs as components | simple API and easy to use",
  "version": "0.0.0-development",
  "homepage": "https://github.com/angular-material-extensions/components/tree/master/projects/angular-material-extensions/dialogs",
  "author": {
    "name": "anthonynahas",
    "url": "https://github.com/anthonynahas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-material-extensions/components.git"
  },
  "license": "MIT",
  "keywords": [
    "angular",
    "library",
    "material",
    "material design",
    "angular components",
    "angular material dialogs",
    "prebuilt dialog",
    "confirm dialog",
    "alert dialog",
    "edit dialog",
    "timer dialog"
  ],
  "bugs": {
    "url": "https://github.com/angular-material-extensions/components/issues"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "semantic-release-no-ci": "semantic-release --no-ci",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag dialogs_v$PACKAGE_VERSION && git push --tags"
  },
  "peerDependencies": {
    "@angular/common": "^8.1.0",
    "@angular/core": "^8.1.0",
    "@angular/cdk": "^8.0.2",
    "@angular/material": "^8.0.2",
    "@angular/flex-layout": "^8.0.0-beta.26"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "semantic-release": "^15.13.18"
  },
  "release": {
    "branch": "dialogs",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "../../../dist/angular-material-extensions/dialogs"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ],
    "preset": "angular"
  }
}
